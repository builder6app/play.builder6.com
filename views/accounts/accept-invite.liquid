<!DOCTYPE html>
<html lang="en">
<head>
    {% render 'partials/head.liquid' %}
    <title>Join Organization - Builder6</title>
</head>
<body class="bg-black text-white flex items-center justify-center min-h-screen font-sans antialiased selection:bg-blue-500 selection:text-white overflow-hidden" x-data="acceptInvitePage">
    {% render 'partials/notifications.liquid' %}
    
    <!-- Ambient Background Effects -->
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-blue-600/20 blur-[100px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-purple-600/20 blur-[100px]"></div>
    </div>

    <div class="relative z-10 bg-[#1c1c1e]/80 backdrop-blur-2xl p-10 rounded-[2rem] shadow-2xl w-[420px] border border-white/10 ring-1 ring-white/5 text-center">
        <div class="flex justify-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
            </div>
        </div>
        
        <h2 class="text-3xl font-bold mb-2 text-white">Join Organization</h2>
        <p class="text-gray-400 mb-8 text-sm" x-show="invitation">
            You have been invited to join <strong class="text-white" x-text="invitation?.organizationName"></strong>
        </p>

        <div x-show="loading" class="py-8">
            <svg class="animate-spin h-8 w-8 text-blue-500 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-xs text-gray-500 mt-2">Verifying invitation...</p>
        </div>

        <div x-show="!loading && mismatch">
            <div class="bg-yellow-500/10 border border-yellow-500/20 rounded-xl p-4 mb-6 text-left">
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-yellow-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
                    <div>
                        <h3 class="text-sm font-bold text-yellow-500 mb-1">Account Mismatch</h3>
                        <p class="text-xs text-yellow-200/80 mb-2">
                            This invitation is not for <strong x-text="currentUserEmail"></strong>.
                        </p>
                        <p class="text-xs text-yellow-200/60 mb-3">Please sign out and log in with the account that received the invitation.</p>
                        <button @click="signOut" class="text-xs bg-yellow-500/20 hover:bg-yellow-500/30 text-yellow-200 px-3 py-1.5 rounded-lg transition-colors">
                            Sign out and switch account
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Login Prompt if not logged in (logic updated to show if explicit login required OR if invitation loaded but user not logged in) -->
        <div x-show="loginRequired || (!loading && invitation && !currentUserEmail)" class="bg-blue-500/10 border border-blue-500/20 rounded-xl p-4 mb-6 text-left">
             <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <div>
                    <h3 class="text-sm font-bold text-blue-400 mb-1">Authentication Required</h3>
                    <p class="text-xs text-blue-200/80 mb-3">
                        Please sign in to view and accept this invitation.
                    </p>
                    <div class="flex gap-2">
                         <a :href="`/accounts/login?redirectTo=${encodeURIComponent(window.location.href)}`" class="text-xs bg-blue-600 hover:bg-blue-500 text-white px-3 py-1.5 rounded-lg transition-colors">
                            Sign In
                        </a>
                         <a :href="`/accounts/register?redirectTo=${encodeURIComponent(window.location.href)}`" class="text-xs bg-white/10 hover:bg-white/20 text-white px-3 py-1.5 rounded-lg transition-colors">
                            Create Account
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div x-show="!loading && invitation">
             <!-- User Mismatch Warning if we somehow got the invitation but emails don't match (unlikely if API blocks it) -->
             <div x-show="currentUserEmail && currentUserEmail !== invitation?.email" class="bg-yellow-500/10 border border-yellow-500/20 rounded-xl p-4 mb-6 text-left">
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-yellow-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
                    <div>
                        <h3 class="text-sm font-bold text-yellow-500 mb-1">Account Mismatch</h3>
                        <p class="text-xs text-yellow-200/80 mb-2">
                            This invitation was sent to <strong x-text="invitation?.email"></strong>, but you are logged in as <strong x-text="currentUserEmail"></strong>.
                        </p>
                        <button @click="signOut" class="text-xs bg-yellow-500/20 hover:bg-yellow-500/30 text-yellow-200 px-3 py-1.5 rounded-lg transition-colors">
                            Sign out and switch account
                        </button>
                    </div>
                </div>
            </div>

            <!-- Removed nested login prompt from here to top level -->

             <div class="bg-white/5 rounded-xl p-4 mb-8 text-left border border-white/10">
                <div class="text-xs text-gray-400 uppercase tracking-wider mb-1">Invited As</div>
                <div class="text-white font-medium truncate" x-text="invitation?.email"></div>
                 <div class="text-xs text-gray-400 uppercase tracking-wider mt-3 mb-1">Role</div>
                <div class="text-white font-medium capitalize" x-text="invitation?.role"></div>
            </div>

            <button @click="acceptInvitation" 
                x-show="currentUserEmail && currentUserEmail === invitation?.email"
                class="w-full bg-[#007AFF] hover:bg-[#0062cc] text-white py-3 rounded-xl font-semibold transition-all duration-200 shadow-lg shadow-blue-900/30 hover:shadow-blue-900/50 transform hover:-translate-y-0.5">
                Accept Invitation
            </button>
            
             <button disabled x-show="currentUserEmail && currentUserEmail !== invitation?.email" class="w-full bg-gray-600 text-gray-400 py-3 rounded-xl font-semibold cursor-not-allowed opacity-50">
                Wrong Account
            </button>
        </div>

        <div x-show="!loading && error">
            <div class="bg-red-500/10 border border-red-500/20 rounded-xl p-4 mb-6">
                 <p class="text-red-400 text-sm" x-text="error"></p>
            </div>
             <a href="/" class="text-sm text-gray-400 hover:text-white transition-colors">Return to Home</a>
        </div>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('acceptInvitePage', () => ({
                loading: true,
                error: null,
                mismatch: false,
                loginRequired: false,
                invitation: null,
                token: '',
                currentUserEmail: '{{ user.email }}',

                async init() {
                    // Extract token from URL path or query params
                    const pathParts = window.location.pathname.split('/');
                    const tokenFromPath = pathParts[pathParts.length - 1]; 
                    this.token = tokenFromPath;

                    // Fetch invitation details to display
                    try {
                        const res = await fetch(`/api/auth/organization/get-invitation?id=${this.token}`);
                        if (res.ok) {
                            this.invitation = await res.json();
                        } else {
                            const err = await res.json().catch(() => ({}));
                            if (err.code === 'YOU_ARE_NOT_THE_RECIPIENT_OF_THE_INVITATION') {
                                this.mismatch = true;
                            } else if (!this.currentUserEmail) {
                                // If not logged in and verify fails, assume we need to login
                                this.loginRequired = true;
                            } else {
                                this.error = err.message || 'Invalid or expired invitation.';
                            }
                        }
                    } catch (e) {
                         this.error = 'Failed to load invitation.';
                    } finally {
                        this.loading = false;
                    }
                },

                async acceptInvitation() {
                    try {
                        const res = await fetch('/api/auth/organization/accept-invitation', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ invitationId: this.token })
                        });

                        if (res.ok) {
                            const data = await res.json();
                            // Redirect to the organization or dashboard
                            // data might contain organization info
                             $notify('Joined successfully!', 'success');
                             setTimeout(() => window.location.href = '/app', 1000);
                        } else {
                            const err = await res.json();
                            $notify(err.message || 'Failed to accept invitation', 'error');
                        }
                    } catch (e) {
                         $notify('An error occurred', 'error');
                    }
                },

                async signOut() {
                     try {
                        await fetch('/api/auth/sign-out', { method: 'POST' });
                        window.location.reload();
                    } catch (e) {
                        console.error(e);
                    }
                },
            }))
        })
    </script>
</body>
</html>
