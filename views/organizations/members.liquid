<!DOCTYPE html>
<html lang="en">
<head>
    {% render 'partials/head.liquid' %}
    <title>Members: {{ organization.name }} - Builder6</title>
</head>
<body class="bg-black text-white font-sans antialiased selection:bg-blue-500 selection:text-white flex flex-col min-h-screen">

    {% render 'partials/header.liquid', is_editor: false, user: user %}
    {% render 'partials/notifications.liquid' %}

    <main class="flex-1 max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8 w-full" x-data="orgMembers">
        <div class="mb-8">
            <div class="flex items-center gap-4 mb-6">
                <a href="/app" class="p-2 -ml-2 text-gray-400 hover:text-white rounded-lg hover:bg-white/10 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                </a>
                <h1 class="text-3xl font-bold text-white">{{ organization.name }}</h1>
            </div>

            <!-- Tabs -->
            <div class="flex items-center gap-1 border-b border-white/10">
                <a href="/org/{{ organization.slug }}/settings" class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-400 hover:text-gray-200 hover:border-gray-700 transition-all">Settings</a>
                <a href="/org/{{ organization.slug }}/members" class="px-4 py-2 text-sm font-medium border-b-2 border-blue-500 text-blue-400">Members</a>
            </div>
        </div>

        <div class="bg-[#1c1c1e] rounded-2xl border border-white/10 shadow-xl">
            <div class="p-6 border-b border-white/10 flex items-center justify-between rounded-t-2xl">
                <div>
                    <h2 class="text-xl font-bold text-white">Team Members</h2>
                    <p class="text-sm text-gray-400 mt-1">Manage who has access to this organization.</p>
                </div>
                <button @click="showInviteModal = true" class="px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white text-sm font-bold rounded-xl transition-all shadow-lg shadow-blue-900/20 flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                    Invite Member
                </button>
            </div>

            <div class="divide-y divide-white/5">
                {% for member in members %}
                <div class="p-4 flex items-center justify-between hover:bg-white/5 transition-colors group {% if forloop.last %}rounded-b-2xl{% endif %}">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gray-700 to-gray-600 flex items-center justify-center text-sm font-bold text-white shadow-inner">
                            {{ member.user.name | slice: 0, 1 | upcase }}
                        </div>
                        <div>
                            <div class="font-medium text-white">{{ member.user.name }}</div>
                            <div class="text-sm text-gray-500">{{ member.user.email }}</div>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="px-3 py-1 rounded-full text-xs font-medium bg-white/10 text-gray-300 border border-white/5">
                            {{ member.role | capitalize }}
                        </div>
                        
                        <!-- Actions (Only show if not self? Or check permissions) -->
                        <div class="relative z-10" x-data="{ menuOpen: false }">
                            <button @click="menuOpen = !menuOpen" class="p-2 text-gray-500 hover:text-white rounded-lg hover:bg-white/10 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path></svg>
                            </button>
                            
                            <!-- Context Menu -->
                            <div class="absolute right-0 top-full mt-2 w-48 bg-[#2c2c2e] border border-white/10 rounded-xl shadow-2xl z-50 overflow-hidden" 
                                x-show="menuOpen" @click.away="menuOpen = false" style="display: none;">
                                <div class="p-1">
                                    <button @click="updateRole('{{ member.userId }}', 'admin'); menuOpen = false;" class="w-full text-left px-3 py-2 text-sm text-gray-300 hover:bg-white/10 rounded-lg hover:text-white flex items-center gap-2">
                                        Make Admin
                                    </button>
                                     <button @click="updateRole('{{ member.userId }}', 'member'); menuOpen = false;" class="w-full text-left px-3 py-2 text-sm text-gray-300 hover:bg-white/10 rounded-lg hover:text-white flex items-center gap-2">
                                        Make Member
                                    </button>
                                    <div class="h-px bg-white/10 my-1 mx-2"></div>
                                    <button @click="removeMember('{{ member.userId }}'); menuOpen = false;" class="w-full text-left px-3 py-2 text-sm text-red-400 hover:bg-red-500/10 rounded-lg hover:text-red-300 flex items-center gap-2">
                                        Remove from Team
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="p-8 text-center text-gray-500">
                    No members found.
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Pending Invitations -->
        {% if invitations.size > 0 %}
        <div class="bg-[#1c1c1e] rounded-2xl border border-white/10 shadow-xl mt-8">
            <div class="p-6 border-b border-white/10 rounded-t-2xl">
                <h2 class="text-xl font-bold text-white">Pending Invitations</h2>
                <p class="text-sm text-gray-400 mt-1">Users invited to join your organization.</p>
            </div>
            
            <div class="divide-y divide-white/5">
                {% for invite in invitations %}
                <div class="p-4 flex items-center justify-between hover:bg-white/5 transition-colors group {% if forloop.last %}rounded-b-2xl{% endif %}">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-sm font-bold text-gray-400">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        </div>
                        <div>
                            <div class="font-medium text-white">{{ invite.email }}</div>
                            <div class="text-sm text-gray-500">Status: {{ invite.status | default: 'Pending' | capitalize }}</div>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="px-3 py-1 rounded-full text-xs font-medium bg-yellow-500/10 text-yellow-300 border border-yellow-500/20">
                            {{ invite.role | capitalize }}
                        </div>

                         <button @click="cancelInvitation('{{ invite.id }}')" class="p-2 text-gray-500 hover:text-red-400 rounded-lg hover:bg-red-500/10 transition-colors" title="Revoke Invitation">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        </button>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
        
        <!-- Invite Modal -->
        <div class="fixed inset-0 z-50 flex items-center justify-center px-4" x-show="showInviteModal" style="display: none;">
            <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" @click="showInviteModal = false" 
                x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" 
                x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"></div>
            
            <div class="relative bg-[#1c1c1e] rounded-2xl w-full max-w-md border border-white/10 shadow-2xl p-6"
                x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
                x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-95">
                
                <h3 class="text-xl font-bold text-white mb-4">Invite Team Member</h3>
                <form @submit.prevent="inviteUser">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1">Email Address</label>
                            <input type="email" x-model="inviteEmail" required class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1">Role</label>
                            <select x-model="inviteRole" class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 appearance-none">
                                <option value="member">Member</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mt-6 flex justify-end gap-3">
                        <button type="button" @click="showInviteModal = false" class="px-4 py-2 text-gray-400 hover:text-white text-sm font-medium transition-colors">Cancel</button>
                        <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium rounded-xl shadow-lg shadow-blue-900/20">Send Invite</button>
                    </div>
                </form>
            </div>
        </div>

    </main>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('orgMembers', () => ({
                orgId: {{ organization.id | json }},
                showInviteModal: false,
                inviteEmail: '',
                inviteRole: 'member',
                
                async inviteUser() {
                    try {
                        const res = await fetch('/api/auth/organization/invite-member', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                organizationId: this.orgId,
                                email: this.inviteEmail,
                                role: this.inviteRole
                            })
                        });
                        
                        if (res.ok) {
                            $notify('Invitation sent!', 'success');
                            this.showInviteModal = false;
                            this.inviteEmail = '';
                             // Optional: Reload to see pending invites if we listed them
                            setTimeout(() => window.location.reload(), 1000);
                        } else {
                            const data = await res.json();
                            $notify(data.message || 'Failed to send invitation', 'error');
                        }
                    } catch (err) {
                        console.error(err);
                        $notify('An error occurred', 'error');
                    }
                },

                async removeMember(userId) {
                    if (!confirm('Are you sure you want to remove this member?')) return;
                    
                    try {
                        const res = await fetch('/api/auth/organization/remove-member', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                organizationId: this.orgId,
                                userId: userId
                            })
                        });

                        if (res.ok) {
                             $notify('Member removed', 'success');
                             window.location.reload();
                        } else {
                            const data = await res.json();
                            $notify(data.message || 'Failed to remove member', 'error');
                        }

                    } catch (err) {
                        console.error(err);
                        $notify('Error removing member', 'error');
                    }
                },

                async updateRole(userId, newRole) {
                    try {
                        const res = await fetch('/api/auth/organization/update-member-role', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                organizationId: this.orgId,
                                userId: userId,
                                role: newRole
                            })
                        });

                         if (res.ok) {
                             $notify('Role updated', 'success');
                             window.location.reload();
                        } else {
                            const data = await res.json();
                            $notify(data.message || 'Failed to update role', 'error');
                        }
                    } catch (err) {
                        console.error(err);
                        $notify('Error updating role', 'error');
                    }
                },

                async cancelInvitation(invitationId) {
                    if (!confirm('Are you sure you want to revoke this invitation?')) return;
                    try {
                        const res = await fetch('/api/auth/organization/cancel-invitation', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ invitationId })
                        });
                        
                        if (res.ok) {
                             $notify('Invitation revoked', 'success');
                             window.location.reload();
                        } else {
                            const data = await res.json();
                            $notify(data.message || 'Failed to revoke invitation', 'error');
                        }
                    } catch (e) {
                         $notify('An error occurred', 'error');
                    }
                },
            }))
        })
    </script>
</body>
</html>
