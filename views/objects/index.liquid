<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Objects - Builder6</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col min-h-screen bg-black text-white font-sans antialiased selection:bg-blue-500 selection:text-white">

    {% render 'partials/header.liquid', is_editor: false, project: project, user: user %}

    <div class="container mx-auto px-6 py-8">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h2 class="text-2xl font-bold tracking-tight">Objects</h2>
                <p class="text-gray-400 mt-1">Manage your data schemas and interfaces.</p>
            </div>
            <a href="/app/{{ project.slug | default: project._id }}/objects/new" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg font-medium transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                <span>New Object</span>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for obj in objects %}
            <div class="bg-[#1c1c1e] border border-white/10 rounded-xl p-6 hover:border-white/20 transition-all group">
                <div class="flex justify-between items-start mb-4">
                    <div class="w-10 h-10 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-400">
                        <!-- Icon placeholder -->
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
                    </div>
                    <div class="opacity-0 group-hover:opacity-100 transition-opacity flex gap-2">
                        <button onclick="deleteObject('{{ obj._id }}')" class="text-gray-400 hover:text-red-400 p-1">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                        </button>
                    </div>
                </div>
                <h3 class="text-lg font-semibold mb-1 group-hover:text-blue-400 transition-colors">
                    <a href="/app/{{ project.slug | default: project._id }}/objects/{{ obj._id }}" class="hover:underline">{{ obj.label | default: obj.name }}</a>
                </h3>
                <p class="text-sm text-gray-400 mb-4 line-clamp-2">{{ obj.description | default: 'No description' }}</p>
                <div class="flex items-center gap-4 text-xs text-gray-500">
                    <span class="bg-white/5 px-2 py-1 rounded">{{ obj.name }}</span>
                    <span>Updated {{ obj.modified | date: "%Y-%m-%d" }}</span>
                </div>
            </div>
            {% else %}
            <div class="col-span-full text-center py-12 text-gray-500">
                <p>No objects found. Creates one to get started.</p>
            </div>
            {% endfor %}
        </div>
    </div>

    <script>
        async function deleteObject(id) {
            if (!confirm('Are you sure you want to delete this object?')) return;
            
            try {
                const res = await fetch(`/app/{{ project._id }}/objects/${id}`, { method: 'DELETE' });
                if (res.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to delete object');
                }
            } catch (e) {
                console.error(e);
                alert('Error deleting object');
            }
        }
    </script>
</body>
</html>
