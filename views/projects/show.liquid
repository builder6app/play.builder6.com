<!DOCTYPE html>
<html lang="zh-CN">
<head>
    {% render 'partials/head.liquid' %}
    <title>{{ project.name }} - Builder6</title>
</head>
<body class="bg-black text-white font-sans antialiased selection:bg-blue-500 selection:text-white min-h-screen flex flex-col">

    {% render 'partials/header.liquid', is_editor: false, user: user %}
    {% render 'partials/notifications.liquid' %}

    <main class="flex-1 container mx-auto px-6 py-8 max-w-5xl" x-data="projectShow('{{ project._id }}', '{{ project.slug | default: project._id }}')">
        <!-- Breadcrumb -->
        <nav class="flex items-center text-sm text-gray-400 mb-6">
            <a href="/app" class="hover:text-white transition-colors">Projects</a>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
            <span class="text-white font-medium">{{ project.name }}</span>
        </nav>

        <div class="flex justify-between items-end mb-8 border-b border-white/10 pb-6">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-white shrink-0 overflow-hidden" {% if project.themeColor %}style="background-color: {{ project.themeColor }}"{% endif %}>
                    <i class="{{ project.icon | default: 'ri-building-4-line' }} text-3xl"></i>
                </div>
                <div>
                    <h2 class="text-3xl font-bold text-white tracking-tight mb-2">{{ project.name }}</h2>
                    <p class="text-gray-400 max-w-2xl">{{ project.description }}</p>
                </div>
            </div>
            <div class="flex gap-3">
                <a href="/app/{{ project.slug | default: project._id }}/settings" class="bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                    Settings
                </a>
                <button @click="createNewPage" class="bg-[#007AFF] hover:bg-[#0062cc] text-white px-4 py-2 rounded-xl text-sm font-medium transition-all shadow-lg shadow-blue-900/20 hover:shadow-blue-900/40 flex items-center gap-2 transform active:scale-95">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                    New Page
                </button>
            </div>
        </div>

        <h3 class="text-xl font-semibold text-white mb-4">Objects</h3>

        {% if objects.size == 0 %}
        <div class="text-center py-10 bg-[#1c1c1e] rounded-xl border border-white/5 border-dashed mb-8">
            <div class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center mx-auto mb-2 text-xl">
                üì¶
            </div>
            <h3 class="text-base font-medium text-white mb-1">No objects yet</h3>
            <button onclick="window.location.href='/app/{{ project.slug | default: project._id }}/objects/new'" class="text-blue-400 hover:text-blue-300 hover:underline text-sm">Create Object &rarr;</button>
        </div>
        {% else %}
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-8">
            {% for obj in objects %}
            <div class="group relative bg-[#1c1c1e] border border-white/10 rounded-xl overflow-hidden hover:border-blue-500/50 transition-all">
                <a href="/app/{{ project.slug | default: project._id }}/objects/{{ obj._id }}" class="block p-4 h-full">
                    <div class="flex items-center gap-3 mb-2">
                        <div class="w-8 h-8 rounded bg-blue-500/10 flex items-center justify-center text-blue-400">
                             <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
                        </div>
                        <h3 class="text-white font-semibold truncate group-hover:text-blue-400 transition-colors">{{ obj.label | default: obj.name }}</h3>
                    </div>
                    <p class="text-xs text-gray-400 line-clamp-2">{{ obj.description | default: "No description" }}</p>
                </a>
            </div>
            {% endfor %}
            <a href="/app/{{ project.slug | default: project._id }}/objects/new" class="flex flex-col items-center justify-center bg-[#1c1c1e] border border-white/10 border-dashed rounded-xl hover:bg-white/5 transition-colors p-4 text-gray-400 hover:text-white group">
                <svg class="w-6 h-6 mb-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                <span class="text-sm font-medium">New Object</span>
            </a>
        </div>
        {% endif %}

        <h3 class="text-xl font-semibold text-white mb-4">Pages</h3>

        {% if pages.size == 0 %}
        <div class="text-center py-16 bg-[#1c1c1e] rounded-3xl border border-white/5 border-dashed">
            <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center mx-auto mb-3 text-2xl">
                üìÑ
            </div>
            <h3 class="text-lg font-medium text-white mb-1">No pages yet</h3>
            <p class="text-gray-400 mb-4 text-sm">Create your first page in this project.</p>
            <button @click="createNewPage" class="text-blue-400 hover:text-blue-300 hover:underline text-sm">Create Page &rarr;</button>
        </div>
        {% else %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for page in pages %}
            <div class="group relative bg-[#1c1c1e] border border-white/10 rounded-2xl overflow-hidden hover:border-blue-500/50 transition-all hover:shadow-2xl hover:shadow-blue-900/10 hover:-translate-y-1">
                <a href="/app/{{ project.slug | default: project._id }}/{{ page._id }}" class="block p-5 h-full">
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="text-white font-semibold text-lg truncate pr-2 group-hover:text-blue-400 transition-colors">{{ page.name | default: "Untitled Page" }}</h3>
                        <span class="text-xs text-gray-500 bg-white/5 px-2 py-1 rounded-full border border-white/5">{{ page.modified | date: "%Y-%m-%d" }}</span>
                    </div>
                    <div class="flex justify-between items-center mt-4 pt-4 border-t border-white/5">
                        <span class="text-xs text-gray-500">Page</span>
                        <span class="text-blue-400 text-xs font-medium opacity-0 group-hover:opacity-100 transition-opacity flex items-center gap-1">
                            Edit <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                        </span>
                    </div>
                </a>
                <button @click.prevent="deletePage('{{ page._id }}')" class="absolute top-3 right-3 p-1.5 text-gray-500 hover:text-red-400 hover:bg-red-400/10 rounded-lg opacity-0 group-hover:opacity-100 transition-all z-10" title="Delete Page">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                </button>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </main>

<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('projectShow', (projectId, projectSlug) => ({
            defaultCode: `<div class="min-h-screen bg-[#000000] flex items-center justify-center font-sans antialiased">
  <div class="w-80 bg-[#1c1c1e] rounded-[2rem] p-6 shadow-2xl border border-white/10 relative overflow-hidden">
    <!-- Background Blur Blob -->
    <div class="absolute top-[-20%] right-[-20%] w-40 h-40 bg-blue-500/30 rounded-full blur-[50px]"></div>
    
    <div class="relative z-10 flex flex-col items-center text-center">
      <div class="w-20 h-20 rounded-full bg-gradient-to-tr from-blue-500 to-purple-600 mb-4 shadow-lg flex items-center justify-center text-3xl">
        üé®
      </div>
      
      <h2 class="text-white text-xl font-semibold mb-1">Design System</h2>
      <p class="text-gray-400 text-sm mb-6">Consistent, reusable components for your next project.</p>
      
      <button class="w-full py-3 bg-[#007AFF] hover:bg-[#0062cc] text-white rounded-xl font-medium transition-all active:scale-95 shadow-lg shadow-blue-900/20">
        Explore Components
      </button>
      
      <div class="mt-6 flex gap-4">
        <div class="h-10 w-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-white/10 transition-colors cursor-pointer">
          <span class="text-lg">‚ù§Ô∏è</span>
        </div>
        <div class="h-10 w-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-white/10 transition-colors cursor-pointer">
          <span class="text-lg">üì§</span>
        </div>
      </div>
    </div>
  </div>
</div>`,

            async createNewPage() {
                try {
                    const response = await fetch('/api/pages', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            projectId, 
                            code: this.defaultCode,
                            name: 'Untitled Page'
                        })
                    });
                    if (response.ok) {
                        const page = await response.json();
                        const pSlug = projectSlug || projectId;
                        window.location.href = '/app/' + pSlug + '/' + page._id;
                    } else {
                        $notify('Failed to create page', 'error');
                    }
                } catch (e) {
                    console.error(e);
                    $notify('An error occurred', 'error');
                }
            },

            async deletePage(id) {
                if (!confirm('Are you sure you want to delete this page?')) return;
                
                try {
                    const response = await fetch('/api/pages/' + id, {
                        method: 'DELETE'
                    });
                    
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        $notify('Failed to delete page', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    $notify('An error occurred', 'error');
                }
            }
        }))
    })
</script>
</body>
</html>
