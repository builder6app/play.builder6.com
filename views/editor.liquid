        }

        // Fetch and cache models
        async function loadModels() {
            const modelSelect = document.getElementById('aiModelSelect');
            if (!modelSelect) return;

            // Check cache
            const cachedModels = localStorage.getItem('ai_models');
            const cachedTime = localStorage.getItem('ai_models_time');
            const now = Date.now();

            if (cachedModels && cachedTime && (now - parseInt(cachedTime) < 24 * 60 * 60 * 1000)) {
                renderModels(JSON.parse(cachedModels));
                return;
            }

            try {
                const res = await fetch('/api/ai/models');
                if (res.ok) {
                    const models = await res.json();
                    localStorage.setItem('ai_models', JSON.stringify(models));
                    localStorage.setItem('ai_models_time', now.toString());
                    renderModels(models);
                } else {
                    console.error('Failed to fetch models');
                    // Fallback
                    renderModels([
                        { id: 'gpt-4o' },
                        { id: 'gpt-4o-mini' },
                        { id: 'google/gemini-3-pro-preview' }
                    ]);
                }
            } catch (e) {
                console.error(e);
            }
        }

        function renderModels(models) {
            const modelSelect = document.getElementById('aiModelSelect');
            if (!modelSelect) return;
            
            modelSelect.innerHTML = models.map(m => 
                `<option value="${m.id}">${m.id}</option>`
            ).join('');
            
            // Restore selection
            const savedModel = localStorage.getItem('ai_selected_model');
            if (savedModel) {
                modelSelect.value = savedModel;
            }

            modelSelect.addEventListener('change', () => {
                localStorage.setItem('ai_selected_model', modelSelect.value);
            });
        }

        // Load models on init
        loadModels();
