<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Builder6 Playground</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html, body { height: 100%; margin: 0; overflow: hidden; }
        #editor { width: 100%; height: 100%; }
    </style>
</head>
<body class="flex flex-col h-screen bg-black text-white font-sans antialiased selection:bg-blue-500 selection:text-white overflow-hidden">

    <script>
        window.PROJECT_ID = "{{ projectId }}";
        window.PROJECT_SLUG = "{{ project.slug }}";
        window.PAGE = {{ page | json }};
    </script>

    {% render 'partials/header.liquid', is_editor: true, project: project, user: user %}

    <!-- History Modal -->
    <div id="historyModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm hidden items-center justify-center z-50 transition-opacity duration-300">
        <div class="bg-[#1c1c1e] p-0 rounded-2xl shadow-2xl w-[600px] border border-white/10 max-h-[80vh] flex flex-col overflow-hidden ring-1 ring-white/5">
            <div class="flex justify-between items-center p-6 border-b border-white/10 bg-[#2c2c2e]">
                <h2 class="text-xl font-bold text-white tracking-tight">Version History</h2>
                <button id="closeHistoryModal" class="text-gray-400 hover:text-white transition-colors p-1 rounded-full hover:bg-white/10">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            <div id="historyList" class="flex-1 overflow-y-auto space-y-2 pr-2">
                <!-- Versions will be injected here -->
                <div class="text-gray-400 text-center py-4">Loading...</div>
            </div>
        </div>
    </div>

    <!-- Page Settings Modal -->
    <div id="pageSettingsModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm hidden items-center justify-center z-50 transition-opacity duration-300">
        <div class="bg-[#1c1c1e] p-0 rounded-2xl shadow-2xl w-[500px] border border-white/10 flex flex-col overflow-hidden ring-1 ring-white/5">
            <div class="flex justify-between items-center p-6 border-b border-white/10 bg-[#2c2c2e]">
                <h2 class="text-xl font-bold text-white tracking-tight">Page Settings</h2>
                <button id="closePageSettingsModal" class="text-gray-400 hover:text-white transition-colors p-1 rounded-full hover:bg-white/10">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-400 mb-1">Page Name <span class="text-red-500">*</span></label>
                    <input type="text" id="settingsPageName" class="w-full bg-black/20 border border-white/10 rounded-lg px-3 py-2 text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition-colors" placeholder="e.g. About Us">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-400 mb-1">Meta Title</label>
                    <input type="text" id="settingsMetaTitle" class="w-full bg-black/20 border border-white/10 rounded-lg px-3 py-2 text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition-colors" placeholder="e.g. About Us - My Company">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-400 mb-1">Page URL (Slug)</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 rounded-l-lg border border-r-0 border-white/10 bg-white/5 text-gray-500 text-sm">/</span>
                        <input type="text" id="settingsPagePath" class="flex-1 bg-black/20 border border-white/10 rounded-r-lg px-3 py-2 text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition-colors" placeholder="e.g. about-us">
                    </div>
                </div>
                <div class="flex items-center justify-between pt-2">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-white">Global Navigation</span>
                        <span class="text-xs text-gray-500">Show this page in the site menu</span>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" id="settingsAddToNavigation" class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>
            </div>
            <div class="p-6 border-t border-white/10 bg-[#2c2c2e] flex justify-end gap-3">
                <button id="cancelPageSettings" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-300 hover:text-white hover:bg-white/10 transition-colors">Cancel</button>
                <button id="applyPageSettings" class="px-4 py-2 rounded-lg text-sm font-medium bg-blue-600 hover:bg-blue-500 text-white shadow-lg shadow-blue-900/20 transition-all">Apply</button>
            </div>
        </div>
    </div>

    <!-- Project Settings Modal -->
    <div id="projectSettingsModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm hidden items-center justify-center z-50 transition-opacity duration-300">
        <div class="bg-[#1c1c1e] p-0 rounded-2xl shadow-2xl w-[500px] border border-white/10 flex flex-col overflow-hidden ring-1 ring-white/5">
            <div class="flex justify-between items-center p-6 border-b border-white/10 bg-[#2c2c2e]">
                <h2 class="text-xl font-bold text-white tracking-tight">Project Settings</h2>
                <button id="closeProjectSettingsModal" class="text-gray-400 hover:text-white transition-colors p-1 rounded-full hover:bg-white/10">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-400 mb-1">Project Name <span class="text-red-500">*</span></label>
                    <input type="text" id="settingsProjectName" value="{{ project.name }}" class="w-full bg-black/20 border border-white/10 rounded-lg px-3 py-2 text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition-colors">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-400 mb-1">Project URL (Slug) <span class="text-red-500">*</span></label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 rounded-l-lg border border-r-0 border-white/10 bg-white/5 text-gray-500 text-sm">/app/</span>
                        <input type="text" id="settingsProjectSlug" value="{{ project.slug }}" class="flex-1 bg-black/20 border border-white/10 rounded-r-lg px-3 py-2 text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition-colors">
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-400 mb-1">Home Page</label>
                    <select id="settingsProjectHomePage" class="w-full bg-black/20 border border-white/10 rounded-lg px-3 py-2 text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 focus:outline-none transition-colors appearance-none">
                        <option value="">Select a page...</option>
                        {% for p in pages %}
                        <option value="{{ p._id }}" {% if project.homePage == p._id %}selected{% endif %}>{{ p.name | default: "Untitled Page" }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="flex items-center justify-between pt-2">
                    <div class="flex flex-col">
                        <span class="text-sm font-medium text-white">Display navigation on pages</span>
                        <span class="text-xs text-gray-500">Show the site menu bar on all pages</span>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" id="settingsProjectDisplayNavigation" {% if project.displayNavigation %}checked{% endif %} class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>
            </div>
            <div class="p-6 border-t border-white/10 bg-[#2c2c2e] flex justify-between items-center">
                <button id="deleteProjectBtn" class="text-red-400 hover:text-red-300 text-sm font-medium hover:underline">Delete Project</button>
                <div class="flex gap-3">
                    <button id="cancelProjectSettings" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-300 hover:text-white hover:bg-white/10 transition-colors">Cancel</button>
                    <button id="saveProjectSettings" class="px-4 py-2 rounded-lg text-sm font-medium bg-blue-600 hover:bg-blue-500 text-white shadow-lg shadow-blue-900/20 transition-all">Save Changes</button>
                </div>
            </div>
        </div>
    </div>


    <main id="mainContainer" class="flex-1 flex overflow-hidden flex-row relative">
        <!-- Sidebar -->
        <div id="sidebar" class="w-64 bg-[#1c1c1e] border-r border-white/10 flex flex-col hidden md:flex transition-all duration-300">
            <!-- Project Header -->
            <div class="p-6 flex items-center justify-between">
                <div class="flex flex-col overflow-hidden">
                    <h1 class="font-bold text-white truncate text-xl tracking-tight" title="{{ project.name }}">{{ project.name }}</h1>
                    <div class="text-xs text-gray-500 truncate mt-1">/app/{{ project.slug }}</div>
                </div>
                <div class="flex items-center gap-1">
                    <button id="openProjectSettings" class="text-gray-400 hover:text-white transition-colors p-1 rounded hover:bg-white/10 flex-shrink-0" title="Project Settings">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                    </button>
                </div>
            </div>

            <div class="px-6 pb-2 flex justify-between items-center">
                <h2 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Pages</h2>
                <button onclick="createNewPage()" class="text-gray-400 hover:text-white transition-colors p-1 rounded hover:bg-white/10" title="New Page">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                </button>
            </div>

            <div class="flex-1 overflow-y-auto px-4 pb-4 space-y-1">
                {% for p in pages %}
                <div class="group flex items-center justify-between px-4 py-2.5 rounded-lg text-sm font-medium transition-all {% if p._id == page._id %}bg-blue-600 text-white shadow-lg shadow-blue-900/20{% else %}text-gray-400 hover:bg-white/5 hover:text-white{% endif %}">
                    <a href="/interfaces/{{ project._id }}/{{ p._id }}" class="flex-1 truncate flex items-center gap-2">
                        <span>{{ p.name | default: "Untitled Page" }}</span>
                        {% if p.homePage == p._id %}<span class="text-xs opacity-70" title="Home Page">üè†</span>{% endif %}
                    </a>
                    {% if p._id == page._id %}
                    <div class="flex items-center gap-1">
                        <button id="historyBtnSidebar" class="text-white/70 hover:text-white transition-opacity p-1" title="History">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        </button>
                        <button id="pageSettingsBtnSidebar" class="text-white/70 hover:text-white transition-opacity p-1" title="Page Settings">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        </button>
                    </div>
                    {% endif %}
                </div>
                {% endfor %}
            </div>

            <!-- Sidebar Footer -->
            <div class="p-4 border-t border-white/10 flex justify-end">
                <button id="sidebarCollapseBtn" class="text-gray-400 hover:text-white transition-colors p-1 rounded hover:bg-white/10 flex-shrink-0" title="Collapse Sidebar">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" /></svg>
                </button>
            </div>
        </div>

        <div id="editorWrapper" class="flex-1 border-r border-gray-700 flex flex-col min-w-0">
            <div id="editor-container" class="flex-1"></div>
            <!-- Expand Sidebar Button -->
            <button id="sidebarExpandBtn" class="absolute top-4 left-4 z-30 bg-[#1c1c1e] border border-white/10 text-white p-2 rounded-lg shadow-lg hidden hover:bg-white/10 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
            </button>
        </div>

        <div id="previewWrapper" class="flex-1 bg-white relative min-w-0">
            <div class="absolute inset-0 bg-white" id="preview-inner">
                <iframe id="preview" class="w-full h-full border-none"></iframe>
            </div>
        </div>

        <!-- AI Chat Sidebar -->
        <div id="aiChatSidebar" class="w-96 bg-[#1c1c1e] border-l border-white/10 flex-col transition-all duration-300 flex">
            <div class="p-4 border-b border-white/10 bg-[#2c2c2e] flex justify-between items-center">
                <h3 class="font-bold text-white flex items-center gap-2">
                    <span class="text-xl">‚ú®</span> AI
                </h3>
                <button id="closeAiChat" class="text-gray-400 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            <div id="aiChatMessages" class="flex-1 overflow-y-auto p-4 space-y-4">
                <div class="flex gap-3">
                    <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-purple-600 to-blue-600 flex items-center justify-center text-xs flex-shrink-0">AI</div>
                    <div class="bg-white/10 rounded-2xl rounded-tl-none px-4 py-2 text-sm text-gray-200">
                        Hi! I can help you design or modify your page. What would you like to do?
                    </div>
                </div>
            </div>
            <div class="p-4 border-t border-white/10 bg-[#2c2c2e]">
                <div class="mb-2">
                    <select id="aiModelSelect" class="bg-transparent text-xs text-gray-400 hover:text-white focus:outline-none cursor-pointer appearance-none flex items-center gap-1">
                        <option value="gpt-4o">Loading models...</option>
                    </select>
                </div>
                <div class="relative">
                    <textarea id="aiChatInput" rows="1" class="w-full bg-black/20 border border-white/10 rounded-xl pl-4 pr-10 py-3 text-white focus:border-purple-500 focus:ring-1 focus:ring-purple-500 focus:outline-none transition-colors resize-none text-sm" placeholder="Describe what you want..."></textarea>
                    <button id="aiChatSend" class="absolute right-2 top-2 p-1.5 text-purple-500 hover:text-purple-400 transition-colors rounded-lg hover:bg-white/5">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
                    </button>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.44.0/min/vs/loader.min.js"></script>

    <script>
        // Sidebar Toggle Logic
        const sidebarCollapseBtn = document.getElementById('sidebarCollapseBtn');
        const sidebarExpandBtn = document.getElementById('sidebarExpandBtn');
        const sidebar = document.getElementById('sidebar');
        
        function toggleSidebar() {
            const style = window.getComputedStyle(sidebar);
            const isHidden = style.display === 'none';
            
            if (isHidden) {
                sidebar.classList.remove('hidden');
                sidebar.classList.add('flex');
                sidebar.classList.add('md:flex');
                sidebarExpandBtn.classList.add('hidden');
            } else {
                sidebar.classList.add('hidden');
                sidebar.classList.remove('flex');
                sidebar.classList.remove('md:flex');
                sidebarExpandBtn.classList.remove('hidden');
            }
            // Trigger resize for Monaco Editor
            if (editor) setTimeout(() => editor.layout(), 100);
        }

        if (sidebarCollapseBtn) sidebarCollapseBtn.addEventListener('click', toggleSidebar);
        if (sidebarExpandBtn) sidebarExpandBtn.addEventListener('click', toggleSidebar);

        // 1. ÈªòËÆ§‰ª£Á†ÅÊ®°Êùø
        const defaultCode = `<div class="min-h-screen bg-[#000000] flex items-center justify-center font-sans antialiased">
  <div class="w-80 bg-[#1c1c1e] rounded-[2rem] p-6 shadow-2xl border border-white/10 relative overflow-hidden">
    <!-- Background Blur Blob -->
    <div class="absolute top-[-20%] right-[-20%] w-40 h-40 bg-blue-500/30 rounded-full blur-[50px]"></div>
    
    <div class="relative z-10 flex flex-col items-center text-center">
      <div class="w-20 h-20 rounded-full bg-gradient-to-tr from-blue-500 to-purple-600 mb-4 shadow-lg flex items-center justify-center text-3xl">
        üé®
      </div>
      
      <h2 class="text-white text-xl font-semibold mb-1">Design System</h2>
      <p class="text-gray-400 text-sm mb-6">Consistent, reusable components for your next project.</p>
      
      <button class="w-full py-3 bg-[#007AFF] hover:bg-[#0062cc] text-white rounded-xl font-medium transition-all active:scale-95 shadow-lg shadow-blue-900/20">
        Explore Components
      </button>
      
      <div class="mt-6 flex gap-4">
        <div class="h-10 w-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-white/10 transition-colors cursor-pointer">
          <span class="text-lg">‚ù§Ô∏è</span>
        </div>
        <div class="h-10 w-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-white/10 transition-colors cursor-pointer">
          <span class="text-lg">üì§</span>
        </div>
      </div>
    </div>
  </div>
</div>`;

        let editor;
        let currentPageId = null;
        let lastSavedCode = defaultCode;

        // 2. ÂàùÂßãÂåñ Monaco Editor
        require.config({ paths: { 'vs': 'https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.44.0/min/vs' }});
        
        require(['vs/editor/editor.main'], async function() {
            // Ëß£Êûê URL ‰∏≠ÁöÑ‰ª£Á†ÅÔºàÂ¶ÇÊûúÊúâÔºâ
            let initialCode = defaultCode;
            const codeFromUrl = await getCodeFromUrl();
            if (codeFromUrl) {
                initialCode = codeFromUrl;
                lastSavedCode = codeFromUrl;
            }

            editor = monaco.editor.create(document.getElementById('editor-container'), {
                value: initialCode,
                language: 'html',
                theme: 'vs-dark',
                automaticLayout: true,
                minimap: { enabled: false },
                fontSize: 14,
                padding: { top: 20 }
            });

            // ÁõëÂê¨ÂÜÖÂÆπÂèòÂåñÔºåÊõ¥Êñ∞È¢ÑËßà
            editor.onDidChangeModelContent(() => {
                updatePreview();
                updateSaveButtonState();
            });

            // ÂàùÂßãÂåñÈ¢ÑËßà
            updatePreview();
            updateSaveButtonState();
        });

        // 3. Êõ¥Êñ∞È¢ÑËßà Iframe
        function updatePreview() {
            const code = editor.getValue();
            const previewFrame = document.getElementById('preview');
            const doc = previewFrame.contentDocument || previewFrame.contentWindow.document;
            
            // ÊûÑÂª∫ÂÆåÊï¥ÁöÑ HTML È°µÈù¢ÔºåÊ≥®ÂÖ• Tailwind CDN
            const htmlContent = `
                <!DOCTYPE html>
                <html>
                <head>
                    <meta charset="UTF-8">
                    <meta name="viewport" content="width=device-width, initial-scale=1.0">
                    <script src="https://cdn.tailwindcss.com"><\/script>
                </head>
                <body>
                    ${code}
                </body>
                </html>
            `;
            
            doc.open();
            doc.write(htmlContent);
            doc.close();
        }

        function updateSaveButtonState() {
            const btn = document.getElementById('saveBtn');
            const currentCode = editor.getValue();
            const isChanged = currentCode !== lastSavedCode || (window.settingsChanged === true);
            
            if (isChanged) {
                btn.disabled = false;
                btn.classList.remove('opacity-50', 'cursor-not-allowed');
                btn.innerHTML = `<span>Save</span>
