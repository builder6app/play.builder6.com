                    document.getElementById('settingsPagePath').value = window.PAGE.path || '';
                    document.getElementById('settingsAddToNavigation').checked = !!window.PAGE.addToNavigation;
                }
                return window.PAGE.code;
            }

            // ‰ºòÂÖàÊ£ÄÊü•Ë∑ØÂæÑ ID (‰æãÂ¶Ç /interfaces/123/456)
            const path = window.location.pathname;
            const match = path.match(/^\/interfaces\/([a-zA-Z0-9_-]+)\/([a-zA-Z0-9_-]+)$/);
            if (match) {
                const projectId = match[1];
                const pageId = match[2];
                try {
                    const response = await fetch(`/api/pages/${pageId}`);
                    if (response.ok) {
                        const data = await response.json();
                        currentPageId = data._id;
                        if (document.getElementById('pageNameInput')) {
                            document.getElementById('pageNameInput').value = data.name || '';
                        }
                        // Initialize settings inputs
